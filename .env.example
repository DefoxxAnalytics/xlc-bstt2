# BSTT Compliance Dashboard - Environment Variables
# Copy this file to .env and update values for your environment

# =========================
# Django Backend Settings
# =========================

# SECURITY WARNING: Generate a new secret key for production!
# Generate with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-secret-key-change-in-production

# Debug mode - Set to False in production
DEBUG=False

# Allowed hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1

# CORS allowed origins (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost,http://localhost:3000,http://localhost:80

# Database (default: SQLite)
# For PostgreSQL: DATABASE_URL=postgres://user:password@host:5432/dbname
DATABASE_URL=

# =========================
# React Frontend Settings
# =========================

# API URL for the frontend to connect to backend
REACT_APP_API_URL=http://localhost:8000/api

# =========================
# Docker Settings
# =========================

# Container names (optional)
COMPOSE_PROJECT_NAME=bstt
